  <link rel="stylesheet" href="../css/styles.css">

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="row">
        <div class="col">
          <div class="navbar-header navbar-title">
            <a class="navbar-brand navbar-title" href="#">Statistics</a>
          </div>
        </div>
        <div class="col">
          <ul class="nav navbar-nav">
            <li><a href="/adminPage">Homepage</a></li>
            <li><a href="/statistics/total_visits">Statistics</a></li>
            <li><a href="/admin/resources/Poi" target=”_blank”>Database</a></li>
            <li><a href="/userLogout">Log Out</a></li>
          </ul>
        </div>
      </div>
    </div>
  </nav>

 
  <div class="container">
    <h3>Active Covid Cases</h3>
    <p>Total number of reported COVID-19 cases</p>
    <div class="dropdown">
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        Statistics Diagram
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <li><a href="/statistics/total_visits">Total Visits</a></li>
        <li><a href="/statistics/active">Active Covid Cases</a></li>
        <li><a href="/statistics/covid_visits">Total Covid Visits</a></li>
        <li><a href="/statistics/type_classification">Pois Classification</a></li>
        <li><a href="/statistics/type_classification_cases">Pois Classification Covid</a></li>
        <li role="separator" class="divider"></li>
      </ul>
    </div>

        <div class="container">
            
            <div class="chart-container"
                style="height:600px; width:600px; margin-top: 50px; margin-right: 150px; margin-left: 250px;">
                <canvas id="myChart2" width="400" height="400"></canvas>
            </div>
        </div>

  </div>

  <script>
    var users = <%= users %>  
    console.log(users);    
    var active = <%= active %>  
    console.log(active);
  </script>

  <script>
    const ctx2 = document.getElementById('myChart2');
    const myChart2 = new Chart(ctx2, {
      type: 'doughnut',
      data: {
        labels: ['Covid Uninfected', 'Covid infected'],
        datasets: [{
          label: '# of Positive Users',
          data: [users-active, active],
          backgroundColor: [
            'rgba(75, 192, 192, 0.2)',
            'rgba(255, 99, 132, 0.2)',
            'rgba(156, 99, 132, 0.2)'
          ],
          borderColor: [
            'rgba(75, 192, 192, 1)',
            'rgba(255, 99, 132, 1)'          
          ],
          borderWidth: 1
        }]
      }
    });
  </script>

</body>


