  <div class="container">
    <h3>Active Covid Cases <%=total_visits%>
    </h3>
    <div class="chart-container"
      style="height:600px; width:600px; margin-top: 50px; margin-right: 150px; margin-left: 250px;">
      <canvas id="chart" class="chart"></canvas>
    </div>

  </div>


  <script>
    const ctx = document.getElementById('chart');
    const chart = new Chart(ctx, {
      type: 'doughnut',
      data: {
        labels: ['Covid infected', 'Covid Uninfected'],
        datasets: [{
          label: '# of Votes',
          data: [active_users, total_users],
          backgroundColor: [
            'rgba(255, 99, 132, 0.2)',
            'rgba(75, 192, 192, 0.2)'
          ],
          borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(75, 192, 192, 1)'
          ],
          borderWidth: 1
        }]
      }
    });
  </script>

  <div class="container">
